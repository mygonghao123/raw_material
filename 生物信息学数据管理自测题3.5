filein = open("P33_3.txt","r")
ge = "ATCG"
for jian in filein:
    jian = jian.strip()
count_d = {}
for i in ge:
    n = jian.count(i)
    count_d[i] = n
    print("{}:{}".format(i,n))
ls = list(count_d.items())
ls.sort(key=lambda x:x[1],reverse=True)
